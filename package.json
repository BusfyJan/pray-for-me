{
  "name": "pray-for-me",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "npm run functions:install",
    "start": "export REACT_APP_NODE_ENV=development && react-scripts start",
    "build": "react-scripts build",
    "test": "export REACT_APP_NODE_ENV=development && react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "functions:install": "cd ./functions && npm install && cd ..",
    "functions:serve": "./node_modules/.bin/firebase serve --only functions",
    "translate": "npm run translate:cleanup && npm run translate:extract && npm run translate:prepare",
    "translate:cleanup": "NODE_ENV=production ./node_modules/.bin/babel-node src/i18n/cleanup.js",
    "translate:extract": "NODE_ENV=production babel ./src >/dev/null",
    "translate:prepare": "NODE_ENV=production ./node_modules/.bin/babel-node src/i18n/translator.js",
    "deploy:development": "export REACT_APP_NODE_ENV=development && npm run build && npm run deploy:development:firebase && npm run deploy:development:sentry",
    "deploy:production": "export REACT_APP_NODE_ENV=production && npm run build && npm run deploy:production:firebase && npm run deploy:production:sentry",
    "deploy:development:firebase": "./node_modules/.bin/firebase deploy -P development --token \"${FIREBASE_DEPLOY_TOKEN_DEVELOPMENT}\"",
    "deploy:production:firebase": "./node_modules/.bin/firebase deploy -P default --token \"${FIREBASE_DEPLOY_TOKEN_PRODUCTION}\"",
    "deploy:development:sentry": "npm run deploy:development:sentry:release && npm run deploy:development:sentry:deploy",
    "deploy:production:sentry": "npm run deploy:production:sentry:release && npm run deploy:production:sentry:deploy",
    "deploy:development:sentry:release": "curl https://sentry.io/api/hooks/release/builtin/1247108/${SENTRY_RELEASE_TOKEN}/ -X POST -H 'Content-Type: application/json' -d '{\"version\": \"development\"}'",
    "deploy:production:sentry:release": "curl https://sentry.io/api/hooks/release/builtin/1247108/${SENTRY_RELEASE_TOKEN}/ -X POST -H 'Content-Type: application/json' -d '{\"version\": \"production\"}'",
    "deploy:development:sentry:deploy": "curl https://sentry.io/api/0/organizations/janbusfy/releases/development/deploys/ -X POST -H \"Authorization: Bearer ${SENTRY_DEPLOY_TOKEN}\" -H 'Content-Type: application/json' -d ' {\"environment\":\"development\",\"name\":\"development\"}'",
    "deploy:production:sentry:deploy": "curl https://sentry.io/api/0/organizations/janbusfy/releases/production/deploys/ -X POST -H \"Authorization: Bearer ${SENTRY_DEPLOY_TOKEN}\" -H 'Content-Type: application/json' -d ' {\"environment\":\"production\",\"name\":\"production\"}'"
  },
  "dependencies": {
    "@material-ui/core": "^1.0.0",
    "@material-ui/icons": "^1.0.0",
    "firebase": "^5.4.2",
    "moment": "^2.22.2",
    "prop-types": "^15.6.2",
    "raven-js": "^3.26.4",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-ga": "^2.5.3",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-scripts": "^1.1.4",
    "redux": "^4.0.0",
    "styled-components": "^3.3.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-react-intl": "^2.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.1.2",
    "babel-preset-stage-0": "^6.24.1",
    "firebase-tools": "^4.2.1",
    "react-test-renderer": "^16.4.1",
    "redux-devtools-extension": "2.13.5",
    "rmdir": "^1.2.0"
  }
}
